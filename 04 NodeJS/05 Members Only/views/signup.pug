extends layout

block content
  div.container
    div.register-form-container
      form(method="POST", action='' class="register-form") 
        div.form-div
          label(for="username") Username:
          input(type="text" id="username", name="username" required="true")
        div.form-div
          label(for="email") Email:
          input(type="email" id="email", name="email" required="true")
        div.form-div
          label(for="password") Password:
          input(type="password" id="password", name="password" required="true")
        div.form-div
          label(for="rpassword") Confirm Password:
          input(type="password" id="rpassword", name="rpassword" required="true")
        div.avatar-container
          img(src="/public/images/1.svg" alt="Avatar 1" data="1" class="selected avatarImg")
          img(src="/public/images/2.svg" alt="Avatar 2" data="2" class="avatarImg")
          img(src="/public/images/3.svg" alt="Avatar 3" data="3" class="avatarImg")
          img(src="/public/images/4.svg" alt="Avatar 4" data="4" class="avatarImg")
          img(src="/public/images/5.svg" alt="Avatar 5" data="5" class="avatarImg")
          input(style="display: none" type="number" name="avatar" id="avatarRegister" value="1")
        button(type="submit" class="submit") Submit


      if errors 
        ul
          for error in errors
            li= error.msg
      
    script(src="/public/javascripts/register.js")